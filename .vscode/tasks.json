{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}",
                "-B", "${workspaceFolder}/build",
                "-G", "Visual Studio 17 2022",
                "-A", "x64"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure CMake project"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "detail": "Build Debug configuration",
            "dependsOn": []
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Release"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "detail": "Build Release configuration"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/WarTimes.exe",
            "args": [],
            "group": "test",
            "problemMatcher": [],
            "detail": "Run the game"
        },
        {
            "label": "Build & Run",
            "dependsOn": ["Build"],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/WarTimes.exe",
            "args": [],
            "group": "test",
            "problemMatcher": "$msCompile",
            "detail": "Build then run the game"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/build",
                "--config", "Debug",
                "--target", "clean"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean build files"
        },
        {
            "label": "Rebuild",
            "dependsOn": ["Clean", "Build"],
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": "$msCompile",
            "detail": "Clean and rebuild"
        }
    ]
}
